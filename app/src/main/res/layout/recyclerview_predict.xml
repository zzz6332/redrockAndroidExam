<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
<View
    android:layout_width="match_parent"
    android:layout_height="1dp"
    android:background="@color/colorGray"
    />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">


        <TextView
            android:id="@+id/tv_predict_date_day_1"
            android:layout_width="0dp"
            android:textColor="@color/colorWhite"
            android:layout_height="match_parent"
            android:layout_weight="4.5"
            android:paddingLeft="20dp" />

        <ImageView
            android:id="@+id/im_predict_weather_day_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:paddingBottom="7dp" />

        <TextView
            android:id="@+id/tv_predict_temp_low_day_1"
            android:layout_width="0dp"
            android:textColor="@color/colorWhite"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="right" />

        <TextView
            android:id="@+id/tv_predict_temp_high_day_1"
            android:layout_width="0dp"
            android:textColor="@color/colorWhite"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="1.5"
            android:paddingRight="10dp" />
    </LinearLayout>

    <View
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@color/colorGray"

        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_predict_date_day_2"
            android:layout_width="0dp"
            android:textColor="@color/colorWhite"
            android:layout_height="match_parent"
            android:layout_weight="4.5"
            android:paddingLeft="20dp" />

        <ImageView
            android:id="@+id/im_predict_weather_day_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:paddingBottom="7dp" />

        <TextView
            android:id="@+id/tv_predict_temp_low_day_2"
            android:layout_width="0dp"
            android:textColor="@color/colorWhite"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:gravity="right" />

        <TextView
            android:id="@+id/tv_predict_temp_high_day_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="1.5"
            android:textColor="@color/colorWhite"
            android:paddingRight="10dp" />

    </LinearLayout>

    <View
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@color/colorGray"


        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/tv_predict_date_day_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/colorWhite"
            android:layout_weight="4.5"
            android:paddingLeft="20dp" />

        <ImageView
            android:id="@+id/im_predict_weather_day_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:paddingBottom="7dp" />

        <TextView
            android:id="@+id/tv_predict_temp_low_day_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:textColor="@color/colorWhite"
            android:layout_weight="3"
            android:gravity="right" />

        <TextView
            android:id="@+id/tv_predict_temp_high_day_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:textColor="@color/colorWhite"
            android:layout_weight="1.5"
            android:paddingRight="10dp" />

    </LinearLayout>

    <View
        android:layout_width="350dp"
        android:layout_height="1dp"
        android:layout_gravity="center"
        android:background="@color/colorGray"

        />
</LinearLayout>